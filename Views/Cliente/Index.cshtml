@section Scripts{
    <script type="text/javascript">$(document).ready(function () {
            $('#tbDatos').DataTable(
                {
                    dom: 'Bfrtip',
                    buttons: [
                        'print'
                    ],
                    "filter": true,
                    "language": {
                        "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                    }
                });
        });

        function Actualizar(url) {

            if (url == "Paciente/Create") {
                var pacienteId = document.getElementById("txtpacienteId").value;
                var nombre = document.getElementById("txtnombre").value;
                var apellidos = document.getElementById("txtapellidos").value;
                var direccion = document.getElementById("txtdireccion").value;
                var telefono = document.getElementById("txttelefono").value;
                var email = document.getElementById("txtemail").value;
                alert(pacienteId);
            }
            else {
                var pacienteId = document.getElementById("PacienteId").value;
                var nombre = document.getElementById("Nombre").value;
                var apellidos = document.getElementById("Apellidos").value;
                var direccion = document.getElementById("Direccion").value;
                var telefono = document.getElementById("TelefonoContacto").value;
                var email = document.getElementById("Email").value;

            }

            var frm = new FormData();
            frm.append("PacienteId", pacienteId);
            frm.append("Nombre", nombre);
            frm.append("Apellidos", apellidos);
            frm.append("Direccion", direccion);
            frm.append("TelefonoContacto", telefono);
            frm.append("Email", email);
            $.ajax({
                type: "POST",
                url: url,
                data: frm,
                contentType: false,
                processData: false,
                success: function (data) {
                    if (data == "OK") {
                        correcto("Se actualizó correctamente el paciente!");
                        document.getElementById("btnCancelar").click();
                        document.getElementById("frmEnviar").submit();
                    }
                    else {
                        error("Ocurrió un error, por favor verifique!");
                    }
                }
            })
        }

        function ObtenerDetalles(id) {
            let url = event.target.getAttribute('url');
            $.ajax({
                url: url + id,
                typr: "GET",
                contentType: "application/json;charset=UTF-8",
                dataType: "json",
                success: function (response) {
                    $('#PacienteId').val(response.pacienteId);
                    $('#Nombre').val(response.nombre);
                    $('#Apellidos').val(response.apellidos);
                    $('#Direccion').val(response.direccion);
                    $('#Cedula').val(response.cedula);
                    $('#Email').val(response.email);
                    if (url == "/Paciente/Edit/") {
                        $('#PacienteId').val(response.pacienteId);
                        $('#Nombre').val(response.nombre);
                        $('#Apellidos').val(response.apellidos);
                        $('#Direccion').val(response.direccion);
                        $('#Cedula').val(response.cedula);
                        $('#Email').val(response.email);
                        $('#Edit').modal('show');
                    }
                    if (url == "/Paciente/Details/") {
                        $('#pacienteId').val(response.pacienteId);
                        $('#nombre').val(response.nombre);
                        $('#apellidos').val(response.apellidos);
                        $('#direccion').val(response.direccion);
                        $('#Cedula').val(response.cedula);
                        $('#email').val(response.email);
                        $('#Details').modal('show');
                    }
                },
                error: function (response) {
                    error(response.responseText);
                }
            });
            return false;
        }

        function EliminarPaciente(PacienteId) {
            document.getElementById("txtPacienteId").value = PacienteId;
            verModal('Eliminar paciente',
                '¿Desea eliminar el paciente '
                + PacienteId + '?').then((result) => {
                    if (result.value) {
                        var viewEliminar = document.getElementById("viewEliminar");
                        viewEliminar.submit();
                        Swal.fire(
                            'Eliminación!',
                            'El paciente' + PacienteId + 'fue eliminado!.',
                            'success'
                        )
                    }
                    else if (result.dismiss === Swal.DismissReason.cancel) {
                        Swal.fire(
                            'Cancelado',
                            'El paciente' + PacienteId + 'no fue eliminado!!!:)',
                            'error'
                        )
                    }
                })
        }
        function ExportarPDF() {
            var aux = document.getElementById("viewExportarPDF");
            var tabla = document.getElementById("tbDatos");

            aux.submit(tabla);
        }

