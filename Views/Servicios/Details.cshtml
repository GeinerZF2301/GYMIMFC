@model Servicios
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12 col-lg-12">
        <h3 class="text-light" style="text-align:center;background-color:darkslategray;">
            Detalles del Servicio
        </h3>
    </div>
</div>
<br />
<div class="container">
    <form asp-action="Details" method="post" id="viewDetails">
        <br />
        <div class="form-group row">
            <div class="col-md-2 colo-lg-2 text-left">
                <label asp-for="ServicioId" class="col-form-label"></label>
            </div>
            <div class="col-md-2 colo-lg-2 text-left">
                <input asp-for="ServicioId" readonly="readonly" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 colo-lg-2 text-left">
                <label asp-for="Nombre" class="col-form-label"></label>
            </div>
            <div class="col-md-2 colo-lg-2 text-left">
                <input asp-for="Nombre" readonly="readonly" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 colo-lg-2 text-left">
                <label asp-for="Descripcion" class="col-form-label"></label>
            </div>
            <div class="col-md-6 colo-lg-6 text-left">
                <textarea asp-for="Descripcion" rows="4" cols="50"
                          class="form-control" readonly="readonly"> </textarea>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-8 colo-lg-4 text-right">
                <a asp-action="Index" class="btn btn-info"
                   style="width: 50%;">
                    Regresar
                </a>
            </div>
        </div>
    </form>
</div>